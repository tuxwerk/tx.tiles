<tal:show tal:define="uid         context/UID|string:nouid;
		      ">
  <ul class="tx-tiles-container"
       tal:attributes="class string:tx-tiles-container tx-tiles-${uid} tx-tiles-${view/class_name};"
       i18n:domain="tx.tiles">
    <tal:repeat repeat="tile view/tiles">
      <li>
	<div class="tx-tile">
	  <a href="" tal:attributes="href string:${context/portal_url}${tile/link_reference}">
	    <tal:if tal:condition="tile/html">
	      <div class="tx-tile-content" tal:content="structure tile/html">
		Content
	      </div>
	    </tal:if>
	    <tal:if tal:condition="tile/image_type">
	      <img tal:attributes="src string:${view/absolute_url}/@@tx-tiles/${tile/uuid}/@@image;" />
	    </tal:if>
	  </a>
	</div>
      </li>
    </tal:repeat>
  </ul>
</tal:show>
