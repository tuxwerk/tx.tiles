<tal:show tal:define="uid         context/UID|string:nouid;
		      continuous  python: view.continuous() and '0' or '1';
		      navtype     view/navigation_type;
		      hide_pager  python: navtype not in ('bullets', 'both');
		      hide_arrows python: navtype not in ('arrows', 'both');
		      ">
  <div class="tx-tiles-container"
       tal:attributes="class string:tx-tiles-container tx-tiles-${uid} tx-tiles-${view/class_name};
		       style string:padding-bottom: ${view/padding}%;"
       i18n:domain="tx.tiles">
    <div tal:attributes="data-cycle-fx      view/effect;
			 data-cycle-random  view/randomize;
			 data-cycle-speed   view/speed;
			 data-cycle-timeout view/pause;
			 data-cycle-loop    continuous;
			 data-cycle-auto-height view/ratio;
			 "
	 class="cycle-tileshow"
	 data-cycle-auto-height="false"
	 data-cycle-delay="0"
	 data-cycle-loop="0"
	 data-cycle-log="false"
	 data-cycle-loader="false"
	 data-cycle-random="false"
	 data-cycle-pause-on-hover="true"
	 data-cycle-fx="scrollHorz"
	 data-cycle-manual-fx="scrollHorz"
	 data-cycle-manual-speed="500"
	 data-cycle-speed="1000"
	 data-cycle-timeout="2000"
	 data-cycle-swipe="true"
	 data-cycle-tiles="> div.tile"
	 data-off-cycle-pager-template="<span>{{tileNum}}</span>"
	 >
      <div tal:omit-tag="hide_pager" class="cycle-pager"></div>
      <div tal:omit-tag="hide_arrows" class="cycle-next"></div>
      <div tal:omit-tag="hide_arrows" class="cycle-prev"></div>
      <tal:repeat repeat="tile view/tiles">
	<div class="tile">
	  <a href="" tal:attributes="href string:${context/portal_url}${tile/link_reference}">
	    <tal:if tal:condition="tile/image_type">
              <img tal:attributes="src string:${view/absolute_url}/@@tx-tiles/${tile/uuid}/@@image;" />
	    </tal:if>
	    <tal:if tal:condition="tile/html">
	      <div class="cycle-overlay" tal:content="structure tile/html">
		Content
	      </div>
	    </tal:if>
	  </a
	</div>
      </tal:repeat>
    </div>
  </div>
</tal:show>
